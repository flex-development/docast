{
  "*": [
    "dprint check",
    "eslint --exit-on-fatal-error",
    "cspell lint --color --no-progress --relative $@"
  ],
  "**/*.{cts,mts,ts}": "vitest run --changed --typecheck --mode=typecheck",
  "**/yarn.lock": "yarn dedupe --check",
  "src/**/*.ts": ["yarn build", "bash -c tsc -p tsconfig.build.json"]
}
