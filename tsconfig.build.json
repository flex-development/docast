    "allowImportingTsExtensions": false,
    "allowJs": false,
    "checkJs": false,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {},
    "rootDir": "src",
